{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["DOM", "ESNext"]
  },
  "include": ["src"],
  "typeRoots": ["node_modules/@types"],
  "types": ["vite", "@vitejs/plugin-react", "vite-plugin-svgr"]
}
